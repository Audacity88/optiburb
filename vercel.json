{
    "version": 2,
    "builds": [
        {
            "src": "web/app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10",
                "installCommand": "yum install -y geos geos-devel && pip install --no-cache-dir --only-binary :all: -r requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/web/app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "LD_LIBRARY_PATH": "/var/task/lib"
    }
} 